<div class="container py-3">

<div class="container">

<h3>新規会員登録</h3></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="container mx-auto">
  <div class="row">
    <div class="col-4"></br>
    <p><%= f.label :名前 %></p>
    <p><%= f.label :フリガナ %></p>
    <p><%= f.label :メールアドレス %></p>
    <p><%= f.label :郵便局 %></p>
    <p><%= f.label :住所 %></p>
    <p><%= f.label :電話番号 %></p>
    <p><%= f.label :パスワード（6文字以上） %></p>
    <p><%= f.label :パスワード（確認用） %></p>
    </div>
    <div class="col-8">
    <p>
    <div class="row">
    <div class="col" type="text" class="form-control" placeholder="Last name" aria-label="Last name" >
    ( 性 )<%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="col" type="text" class="form-control" placeholder="First name" aria-label="First name" >
    ( 名 )<%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
    </div>
    </div>
    <div class="row">
    <div class="col" type="text" class="form-control" placeholder="Last name" aria-label="Last name" ><br/>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="col" type="text" class="form-control" placeholder="First name" aria-label="First name" ></br>
    (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
    </div>
    </div>
    </p>
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
    <p><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></p>
    <p><%= f.text_field :address, autofocus: true, autocomplete: "address" %></p>
    <p><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></p>
    <p><% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %></br>
        <%= f.password_field :password, autocomplete: "new-password" %>
    </p>
    <p> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
        <%= f.submit "新規登録", class:"btn btn-success" %></br></br>

    </div>
  </div>


<%#= render "public/shared/links" %>
<div class="container">
<div class="row justify-content-around">
    <div class="col-9">
      <h5>既に登録済みの方</h5></br>
    </div>

  <div class="row justify-content-end">
    <div class="col-12">
      <p><%= link_to "こちら",  new_customer_session_path %>からログインしてください</p>
    </div>
  </div>

</div>
</div>
</div>
</div>
<%end%>