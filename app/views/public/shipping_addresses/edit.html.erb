<div class="container py-5">
<div class="container mx-5">
<h3>発送先編集</h3>
</div>
</div>

<div class="container">
  <%= form_with model: @address, url: shipping_address_path(@address.id), method: :patch  do |f| %>
<div class="row">
   <div class="col-md-5">
      <h5>郵便番号　(ハイフンなし)</h5>
      <h5>住所</h5></br>
      <h5>宛名</h5>
      </div>
      <div class="col-6 col-md-7">
      <p><%= f.text_field :postal_code %></p>
      <p><%= f.text_field :address %></p>
      <div class="row d-flex justify-content-between mx-1">
      <p><%= f.text_field :name %></p>
      <p><%= f.submit "変更内容を保存",class:"btn btn-sm btn-success"%></p>
      </div>
      </div>
</div>

</div>
  <% end %>