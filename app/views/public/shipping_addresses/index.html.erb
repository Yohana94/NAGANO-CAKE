<div class="container py-5">
<div class="container mx-5">
<h3>発送先登録/一覧</h3>
</div>
</div>

<div class="container">
  <%= form_with model: @address, url: shipping_addresses_path, method: :post do |f| %>
<div class="row">
   <div class="col-md-5">
      <h5>郵便番号　(ハイフンなし)</h5>
      <h5>住所</h5></br>
      <h5>宛名</h5>
      </div>
      <div class="col-6 col-md-7">
      <p><%= f.text_field :postal_code %></p>
      <p><%= f.text_field :address %></p>
      <div class="row d-flex justify-content-between mx-1">
      <p><%= f.text_field :name %></p>
      <p><%= f.submit "新規登録",class:"btn btn-sm btn-success"%></p>
      </div>
      </div>
</div>
  <% end %>
</div>

<div class="container py-5">
<div class="container mx-5">
<table class="table table-bordered table-dark">
  <thead class="thead text-center">
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
    <tr class="text-center">
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><div class="container">
     <div class="row justify-content-center">
     <div class="col-4">
       <%= link_to "編集する", edit_shipping_address_path(address.id) ,class:"btn btn-sm btn-success" %>
    </div>
    <div class="col-4">
      <%= link_to "削除する", shipping_address_path(address.id), method: :delete,class:"btn btn-sm btn-danger"%>
    </div>
  </div>
  <% end %>
</div></td>
    </tr>
  </tbody>
</table>
</div>
</div>