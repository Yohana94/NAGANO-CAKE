
<div class="container py-4">

<div class="container">
<%= form_with model: @order, url: '/orders/confirm', method: :post do |f| %>
<h2>注文情報入力</h2>

<div class="container"></br>

    <div class="col-8">
      <table class="table table-borderless">
      <thead >
        <tr>
          <h5 class="font-weight-bold">支払方法</h5>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td>
            <%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
            <%= f.label :method_of_payment,"クレジットカード" %></br>

            <%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
            <%= f.label :method_of_payment, "銀行振込"%>
        </td>
        </tr>
      </tbody>
      </table>
    </div>

<div class="col-8">
      <table class="table table-borderless">
      <thead>
        <tr>
          <h5 class="font-weight-bold">お届け先</h5>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td>
         <%= f.radio_button :select_address, 1, :checked => true %>
         <%= f.label :select_address, "ご自身の住所", :value => false %></br>
         <span class="mx-3"><%= current_customer.address %></span>
        </td>
        </tr>
        <tr>
        <td>
         <%= f.radio_button :select_address, 2, :checked => true %>
         <%= f.label :select_address, "登録済から選択", :value => false %></br></br>
         <span class="mx-3"><%= f.collection_select :address_id, Address.all, :id, :address_display %></span></br>
        </td>
        </tr>
        <tr>
        <td>
         <%= f.radio_button :select_address, 3, :checked => true %>
         <%= f.label :select_address, "新しいお届け先", :value => false %></br>
        <div class="container">
        <div class="row">
            <div class="col-md-5">
            <p>郵便局（ハイフンなし）</p>
            <p>住所</p>
            <p>宛名</p>
            </div>
            <div class="col-6 col-md-7">
            <p><%= f.text_field :post_code %></p>
            <p><%= f.text_field :address %></p>
            <p><%= f.text_field :address_name %></p>
            </div>
        </div>
        </div>

        </td>
        </tr>
      </tbody>
      </table>
    </div>


<div class="container">
  <div class="row justify-content-end">
    <div class="col-7">
      <%= f.submit '確認画面へ進む', class:"btn btn-primary" %>
    </div>
  </div>
</div>

</div>
<% end %>
</div>
</div>
