<div class="container py-3">

<div class="container"></br>
<div class="row justify-content-between">
    <div class="col-4">
      <h3>注文情報確認</h3></br>
    </div>
</div>
</div>


  <div class="row"></br>
    <div class="col-9">
      <table class="table table-bordered">
        <thead class="table-info">
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込み）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
    </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
    <tr>
      <th scope="row">
      <%= image_tag cart_item.item.get_image(100,100) %>
      <%= cart_item.item.name %>
      </th>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal %>
      <% end %>
    </tr>
        </tbody>
      </table>
    </div>

    <div class="col-3">
      <table class="table table-bordered">
      <tbody>
    <tr>
      <th scope="row" class="table-info">送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th scope="row" class="table-info">商品合計</th>
      <td><%= @total %></td>
    </tr>
    <tr>
      <th scope="row" class="table-info">請求金額</th>
      <td> <%= @total += @order.postage %></td> <!-- @total = @total + @order.postage-->
    </tr>
  </tbody>
      </table>
    </div>

<div class="container"></br>
<div class="row">
    <div class="col-12">
      <table class="table table-borderless">
      <tbody>
    <tr>
      <th scope="row">支払方法</th>

      <td><%= @order.method_of_payment_i18n %></td>

    </tr>
    <tr>
      <th scope="row">お届け先</th>
      <td><%= @order.address %></td>
      <td><%= @order.post_code %></td>
      <td><%= @order.address_name %></td>
    </tr>
  </tbody>
      </table>
    </div>
</div>
</div>

<div class="container"></br></br>
  <div class="row justify-content-end">
    <div class="col-7">
      <%= form_with model: @order, url: '/orders', method: :post do |f| %>
      <%= f.hidden_field :method_of_payment, :value => @order.method_of_payment %>
      <%= f.hidden_field :post_code, :value => @order.post_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :address_name, :value => @order.address_name %>
      <%= f.hidden_field :accounting_amount, :value => @total%>
      <%= f.submit "注文を確定する", class:"btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>

  </div>
</div>