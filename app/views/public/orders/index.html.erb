<div class="container py-5">
<div class="container mx-5">
<h3>注文履歴一覧</h3>
</div>
</div>


<div class="container py-5">
<div class="container mx-5">
<table class="table table-bordered table-dark">
  <thead class="thead text-center">
    <tr>
      <th scope="col">注文日</th>
      <th scope="col">発送先</th>
      <th scope="col">注文商品</th>
      <th scope="col">支払金額</th>
      <th scope="col">ステータス</th>
      <th scope="col">注文詳細</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr class="text-center">
      <td><%= order.created_at %></td>
      <td><%= order.address + order.address_name + order.post_code%></td>
      <td><% order.order_details.each do |order_detail|%>
      <%= order_detail.item.name %>
      <% end %></td>
      <td><%= order.accounting_amount %></td>
      <td><%= order.order_status_i18n %></td>
      <td><div class="container">
     <div class="row justify-content-center">
     <div class="col-4">
       <%= link_to "表示する", order_path(order.id) ,class:"btn btn-sm btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
      </td>

    </tr>
  </tbody>
</table>
</div>
</div>