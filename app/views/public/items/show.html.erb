<div class="container-fluid py-5">
  <div class="container">
    <div class="row">
       <div class="col-sm-3">
       <table class="table table-bordered border-primary">
          <thead>
            <tr>
              <th scope="col">ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
              <% @genres.each do |genre| %>
            <tr>
            <td><%= genre.name %></td>
            </tr>
              <%end%>
          </tbody>
       </table>
       </div>
       <div class="col-sm-9">
       <div class="row">
         <div class="col-sm-6">
          <%= image_tag @item.get_image(400,400) %>
         </div>
         <div class="col-sm-6">
         <h3><%= @item.name %></h3></br>
         <h5><%= @item.introduction %></h5></br></br></br>
         <h4>¥ <%= @item.price %>（税込）</h4></br></br></br>
         <%= form_with model: @cart_item, url: '/cart_items', method: :post do |f| %>
         <%= f.hidden_field :item_id, :value => @item.id %>
         <%= f.select :amount, [*(1..10)],include_blank: "個数選択" %>
         <%= f.submit 'カートに入れる' ,class:"btn btn-success"%>
         <% end %>
         </div>
         </div>
        </div>
    </div>
  </div>
</div>
