

<div class="container py-3">

<div class="container"></br>
<div class="row justify-content-between">
    <div class="col-4">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-3">
      <h4 class="text-end"><%= link_to "カートに空にする" , all_destroy_cart_items_path, method: :delete,class:"btn btn-sm btn-danger" %></h4></br>
    </div>
</div>
</div>


  <div class="row">
  <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込み）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
    </tr>
  </thead>
  <tbody>
  <% total = 0 %>

    <% @cart_items.each do |cart_item| %>
      <tr>
        <th scope="row">
        <%= image_tag cart_item.item.get_image(50,50) %>
        <%= cart_item.item.name %>
        </th>
        <td><%= cart_item.item.with_tax_price%></td>
        <%= form_with model: cart_item do |f| %>
          <td><%= f.number_field :amount %>
          <%= f.submit '変更', class:"btn btn-success" %></td>
        <% end %>
        <td><%= cart_item.subtotal %></td>
        <% total += (cart_item.item.price * 1.1).floor * cart_item.amount %>
        <td><%= link_to "削除する" ,cart_item_path(cart_item.id),method: :delete,class:"btn btn-sm btn-danger destroy_cart_items_17748" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container"></br>
<div class="row justify-content-between">
    <div class="col-4">

      <%= link_to "買い物を続ける", root_path,method: :get,class:"btn btn-sm btn-primary" %>

    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th scope="col">合計金額</th>
          <th scope="col"><%= total %></th>
        </tr>
        </thead>
      </table>
    </div>
</div>
</div>

<div class="container"></br></br>
  <div class="row justify-content-end">
    <div class="col-7">
     <% if @cart_items.present? %>
      <%= link_to "情報入力に進む", new_order_path,method: :get,class:"btn btn-sm btn-success" %>
     <% end %>
    </div>
  </div>
</div>

  </div>
</div>
