<div class="container"></br></br>
<div class="row justify-content-center">
    <div class="col-12">
      <span class="alert alert-warning" role="alert"><%= @customer.last_name+@customer.first_name %>
        会員詳細
      </span>
    </div>
</div>
</div></br></br>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <p>会員ID</p>
      <p>氏名</p>
      <p>フリガナ</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
      <p>会員ステータス</p>
    </div>
    <div class="col-sm-8">
      <p><%= @customer.id %></p>
      <p><%= @customer.last_name+@customer.first_name %></p>
      <p><%= @customer.last_name_kana+@customer.first_name_kana %></p>
      <p><%= @customer.postal_code %></p>
      <p><%= @customer.address %></p>
      <p><%= @customer.telephone_number %></p>
      <p><%= @customer.email %></p>
      <p> <% if @customer.is_active %>
            有効
          <%else%>
            退会
          <%end%></p>
    </div>
  </div>
</div></br>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-2">
    <%= link_to "編集する", edit_admin_customer_path(@customer),class:"btn btn-sm btn-success edit_item_17748"%>
    </div>
    <div class="col-sm-4">
    <%= link_to "注文履歴一覧を見る", admin_admin_path,class:"btn btn-sm btn-primary"%>
