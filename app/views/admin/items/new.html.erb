<div class="container-fluid py-5">
  <div class="container">
<%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
<span class="alert alert-secondary" role="alert">　商品新規登録　　</span></br></br></br>

<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">商品画像</label>
    <div class="col-sm-10">
     <%= f.file_field :image %>
    </div>
  </div>

<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label"> 商品名</label>
    <div class="col-sm-10">
    <%= f.text_field :name, placeholder: "商品名" %>
    </div>
</div>

<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label"> 商品説明</label>
    <div class="col-sm-10">
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
    </div>
</div>

<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label"> ジャンル</label>
    <div class="col-sm-10">
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
</div>

<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label"> 税抜価格</label>
    <div class="col-sm-10">
    <%= f.number_field :price %>円
    </div>
</div>

<div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label"> 販売ステータス</label>
    <div class="row">
    <div class="col-sm-12">
    <%= f.radio_button :is_active, true%>
    <%= f.label :is_active, "販売中", :value => true  %>
    </div>
    </div>
    <div class="row">
    <div class="col-sm-12">
    <%= f.radio_button :is_active, false, :checked => true %>
    <%= f.label :is_active, "販売停止中", :value => false %>
    </div>
    </div>
</div>

</div>
</div>
</div>

<div class="container">
<div class="row justify-content-end">
<div class="col-7">
  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>

</div>
</div>