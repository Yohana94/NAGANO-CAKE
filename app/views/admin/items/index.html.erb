<div class="container py-3 mr-3"></br>
<div class="container">
<div class="row justify-content-between">
    <div class="col-4">
      <h3>商品一覧</h3>
    </div>
    <div class="col-2">
    <%= link_to new_admin_item_path do %>
    <h2><i class="fa fa-plus-circle" aria-hidden="true"></i></h2>
    <% end %>
    </div>
</div>
</div></br>

<div class="container py-3 mr-3">
<table class="table table-bordered table-dark">
<thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>

</thead>
<tbody>
 <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre_id %></td>
      <td><% if item.is_active %>
            販売中
          <%else%>
            販売停止中
          <%end%>
      </td>

      </tr>

<%end%>
</tbody>
</table>

</div>

<div class="container">
<div class="row justify-content-end">
<div class="col-7">
 <%= paginate @items %>
</div>
</div>
</div>