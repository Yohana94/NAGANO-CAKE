<div class="container py-2">
<div class="row justify-content-end">
<div class="col-12">
<h3>商品詳細</h3></br>
</div>
</div>
</div>

<div class="container ">
  <div class="row">

 <div class="col-sm-9">
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-sm-8">
      <table class="table table-borderless">
        <tbody><tr></tr>
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
         <tr>
          <th>ジャンル</th>
          <th><%= @item.genre.name %></th>
        </tr>
        <tr>
          <th>税込価格(税抜価格)</th>
          <th><%= @item.price %>￥</th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th><% if @item.is_active %>
            販売中
          <%else%>
            販売停止中
          <%end%>
          </th>
        </tr>

        </tbody>

      </table>
    </div>
    </div>
  </div>
</div>

  </div>
</div>

<div class="container"></br>
<div class="row justify-content-end">
<div class="col-7">
  <div class="actions">
   <%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-sm btn-success edit_item_17748"%>
  </div>
</div>
</div>
</div>
