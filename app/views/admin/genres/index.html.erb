<div class="container py-3">

<%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
<div class="form-group row">

    <label for="staticEmail" class="col-sm-2 col-form-label"><%= f.label :ジャンル名 %></label>
    <div class="col-sm-10">
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class:"btn btn-success" %>
    <%end%>
    </div>
</div>

<div class="col-md-8 offset-md-1">
<h2>ジャンル</h2>
<table class="table">
<tbody><tr>
</tbody>
<div class="genre-wrap">

<div class="genre-box">
<div class="genre-comment">
    <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to admin_genres_path(genre) do %>
      <td><%= genre.name %></td>
      <%end%>

      <td><%= link_to "編集する", edit_admin_genre_path(genre),class:"btn btn-sm btn-success edit_genre_17748"%></td>

    </tr>
<%end%>

</div>
</div>

</table>
</div>

</div>